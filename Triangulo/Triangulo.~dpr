program Triangulo;

{$APPTYPE CONSOLE}

uses
  SysUtils;

Var L1, L2, L3: Real;

 //verifica os 3 lados de um triângulo e diz se é esquilátero, isóceles ou escaleno

begin
  Writeln('Informe o comprimento do primeiro lado:');
  Readln(L1);
  Writeln('Informe o comprimento do segundo lado:');
  Readln(L2);
  Writeln('Informe o comprimento do segundo lado:');
  Readln(L3);
  IF (L1 = L2) and (L2 = L3) and (L3 = L1) THEN
    Begin
      Writeln('O triangulo e Equilatero');
      Readln;
    End
  ELSE IF (L1 <> L2) and (L2 <> L3) and (L3 <> L1) THEN
    Begin
      Writeln('O triangulo e Escaleno');
      Readln;
    End
  ELSE
    Begin
      Writeln('O triangulo e Isosceles');
      Readln;
    End;
end.
 