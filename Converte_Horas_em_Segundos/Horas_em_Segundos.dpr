program Horas_em_Segundos;

{$APPTYPE CONSOLE}

uses
  SysUtils;

Var Horas, Minutos, Segundos: Integer;
  //converte horas em minutos e segundos
begin

  Writeln('Digite a quantidade de horas');
  Readln(Horas);

  Minutos:= Horas * 60;
  Segundos:= Minutos * 60;

  Writeln(Horas, ' equivale a: ');
  Writeln(Minutos, ' minutos ');
  Writeln(Segundos ,' segundos');
  Readln;
end.
 